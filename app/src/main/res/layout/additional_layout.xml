<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/freq_product_ll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <com.displayfort.mvpatel.TextUtils.TypefaceTextViewBrandenBold
        android:id="@+id/frequent_Prod_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="8.0dip"
        android:text="Frequently Bought Together"
        android:textColor="@color/theme"
        android:textSize="16.0sp"
        android:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/freq_product_list_rv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:orientation="horizontal"
        android:scrollbars="vertical"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:reverseLayout="true"
        tools:listitem="@layout/freq_product_list_item" />
</LinearLayout>