<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="85dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4.0dip"
    android:layout_marginTop="8.0dip"
    android:layout_marginRight="4.0dip"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/img_pager_itemLayout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/image_background_box"
        android:padding="2dp">

        <ImageView
            android:id="@+id/img_pager_item_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2.0dip"
            android:adjustViewBounds="true"
            android:background="?android:selectableItemBackground"
            android:clickable="false"
            android:scaleType="centerInside"
            android:src="@drawable/dummy_image" />


    </FrameLayout>

    <ImageView
        android:id="@+id/newArrivalImageView_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center|left|top"
        android:adjustViewBounds="true"
        android:background="?android:selectableItemBackground"
        android:scaleType="center"
        android:src="@drawable/ic_close"
        android:tint="@color/theme" />

    <com.displayfort.mvpatel.TextUtils.TypefaceTextViewBrandenLight
        android:id="@+id/productCodeTextView_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_pager_itemLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4.0dip"
        android:lines="1"
        android:text="SDR-WHT-DJ0010F"
        android:textColor="@color/text_color"
        android:textSize="8sp" />

    <com.displayfort.mvpatel.TextUtils.TypefaceTextViewBrandenReg
        android:id="@+id/productNameTextView_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:lines="2"
        android:text="Push Button Soap Dispensers"
        android:textColor="@color/text_color"
        android:textSize="12.0sp"
        android:visibility="gone" />


    <com.displayfort.mvpatel.TextUtils.TypefaceTextViewBrandenLight
        android:id="@+id/productprice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productCodeTextView_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="1.0dip"
        android:lines="1"
        android:text="x,xxx"
        android:textColor="@color/theme"
        android:textSize="8.0sp" />
</RelativeLayout>