<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2.0dip"
    android:layout_marginRight="2.0dip"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/img_pager_itemLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.4">


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            card_view:cardCornerRadius="4.0dip"
            card_view:cardElevation="2.0dip"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/favourteLinearlayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginTop="18.0dip"
                android:layout_marginBottom="18.0dip"
                android:gravity="center"
                android:orientation="horizontal">


                <com.displayfort.mvpatel.TextUtils.TypefaceTextViewBrandenLight
                    android:id="@+id/favroutedNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/deleteProjectImageView"
                    android:layout_marginLeft="8.0dip"
                    android:layout_toRightOf="@+id/img_pager_item"
                    android:layout_weight="0.6"
                    android:minWidth="80.0dip"
                    android:text="Product 1"

                    android:textColor="@color/theme"
                    android:textSize="16.0sp" />

                <ImageView
                    android:id="@+id/threeDotImageView"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="left"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginRight="20.0dip"
                    android:layout_toRightOf="@+id/favroutedNameTextView"
                    android:layout_weight="0.2"
                    android:adjustViewBounds="false"
                    android:contentDescription=""
                    android:cropToPadding="false"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_more_vert_black" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</LinearLayout>